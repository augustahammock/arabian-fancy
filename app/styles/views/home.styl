//
// Home page styles
//---------------------------------------------------------

body.home

    .global-header
        padding 20px 0 190px
        margin-bottom 0

    .website-title
        position absolute
        top 85px
        width 100%
        padding 0

        h1
            font-size 88px
            margin-bottom 10px

        h2
            display block

    .content-container
        padding-bottom 30px

    .center
        overflow hidden

    .hero
        height 500px
        background $black
        margin-bottom 30px
        overflow hidden

        .center
            position relative
            height 100%
            overflow visible

    .heroImage
        position absolute
        top -180px
        left -250px

    .colorSelector
        position relative
        float right
        width 415px
        text-align center
        color $white
        margin-top 140px

        p
            color $cream
            margin-bottom 20px

        ul
            margin-bottom 20px

            li
                color $white
                border 1px solid rgba(255, 255, 255, .2)

                &:hover
                    border 1px solid $white

    .colorImages
        position relative
        width 250px
        height 150px
        margin 0 auto

        img
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            opacity 0
            transition opacity .2s

        .active
            opacity 1
            transition opacity .2s

    .intro
        float left
        width 40%
        padding-right 20px


    .gallery--spotlight
        float left
        width 60%
        padding-left 20px
        border-left 2px solid $mist

        h3
            margin-bottom 20px

        ul
            margin 0
            padding 0
            list-style none
            overflow hidden

        li
            float left
            width 22%
            margin-left 4%

            &:first-child
                margin-left 0

        img
            width 100%
            height 100%
