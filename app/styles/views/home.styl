//
// Home page styles
//---------------------------------------------------------

body.home

    .global-header
        padding 20px 0 190px
        margin-bottom 0

    .website-title
        position absolute
        top 85px
        width 100%
        padding 0

        h1
            font-size 88px
            margin-bottom 10px

        h2
            display block

    .content-container
        padding-bottom 30px

    .center
        overflow hidden

    .hero
        height 500px
        background $black
        margin-bottom 30px
        overflow hidden

        .center
            position relative
            height 100%
            overflow visible

    .heroImage
        position absolute
        top -180px
        left -250px

    .colorSelector
        position relative
        float right
        width 415px
        text-align center
        color $white
        margin-top 140px

        p
            color $cream
            margin-bottom 20px

        ul
            margin-bottom 20px

            li
                color $white
                border 1px solid rgba(255, 255, 255, .2)

                &:hover
                    border 1px solid $white

    .colorImages
        position relative
        width 250px
        height 150px
        margin 0 auto

        img
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            opacity 0
            transition opacity .2s

        .active
            opacity 1
            transition opacity .2s

    .intro
        float left
        width 40%
        padding-right 20px


    .gallery--spotlight
        float left
        width 60%
        padding-left 20px
        border-left 2px solid $mist

        h3
            margin-bottom 20px

        ul
            margin 0
            padding 0
            list-style none
            overflow hidden

        li
            float left
            width 22%
            margin-left 4%

            &:first-child
                margin-left 0

        img
            width 100%
            height 100%



    +below(500px)
        .global-header
            padding-top 0
            padding-bottom 175px

        .website-title
            top 60px
            
            h1
                font-size 34px
                margin-bottom 20px
        
        .hero
            height auto
            padding 20px 0
            margin-bottom 20px
        
        .heroImage
            display none
            position absolute
            width 80%
            top -70px
            left auto
            right 30px
            opacity .3
        
        .colorSelector
            width 100%
            text-align center
            margin-top 0
            
            ul
                margin-bottom 0
            
            li
                display inline-block
                float none
        
        .colorImages
            display none
        
        .intro
            float none
            width 100%
            text-align center
            padding 0
            margin-bottom 25px
        
        .gallery--spotlight
            float none
            width 100%
            text-align center
            background $cream-lighter
            border 0
            padding 10px
            
            h3
                margin-bottom 10px