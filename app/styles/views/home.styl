//
// Home page styles
//---------------------------------------------------------

body.home

    .global-header
        padding 20px 0 190px
        margin-bottom 0

    .website-title
        position absolute
        top 85px
        width 100%
        padding 0

        h1
            font-size 88px
            margin-bottom 10px

        h2
            display block

    .content-container
        padding-bottom 30px

    .center
        overflow hidden

    .hero
        height 500px
        background $black
        margin-bottom 30px
        overflow hidden

        .center
            position relative
            height 100%
            overflow visible

    .heroImage
        position absolute
        top -180px
        left -250px

    .colorSelector
        position relative
        float right
        width 415px
        text-align center
        color $white
        margin-top 140px

        p
            color $cream
            margin-bottom 20px

        ul
            margin-bottom 20px

            li
                color $white
                border 1px solid rgba(255, 255, 255, .2)

                &:hover
                    border 1px solid $white

    .colorImages
        position relative
        width 250px
        height 150px
        margin 0 auto

        img
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            opacity 0
            transition opacity .2s

        .active
            opacity 1
            transition opacity .2s

    .intro
        float left
        width 40%
        padding-right 20px


    .gallery--spotlight
        float left
        width 60%
        padding-left 20px
        border-left 2px solid $mist

        h3
            margin-bottom 20px

        ul
            margin 0
            padding 0
            list-style none
            overflow hidden

        li
            float left
            width 22%
            margin-left 4%

            &:first-child
                margin-left 0

        img
            width 100%
            height 100%



    +below(1260px)

        .hero
            height 0
            padding-bottom 40%

            .colorSelector
                margin-top 11%
                margin-right 5%

        .heroImage
            top -80px
            left -15%
            max-width 70%



    +below(1000px)

        .global-header
            padding-bottom 160px

        .website-title
            h1
                font-size 68px

        .hero
            padding-bottom 400px

            .colorSelector
                float left
                margin-top 90px
                margin-right 0

        .heroImage
            top -130px
            left auto
            right -40px
            max-width 90%
            opacity .5



    +below(768px)

        .global-header
            padding-bottom 140px

            h1
                font-size 58px

            h2
                font-size 27px

        .hero
            padding-bottom 300px

            .colorSelector
                margin-top 30px

        .heroImage
            max-width 100%
            right -110px

        .intro
            width 50%

        .gallery--spotlight
            width 50%



    +below(700px)

        .heroImage
            right -160px



    +below(600px)

        .global-header
            padding-bottom 120px

            h1
                font-size 48px

            h2
                font-size 22px

        .hero
            height auto
            padding 20px 0
            margin-bottom 20px

            .colorSelector
                width 100%
                text-align center
                margin-top 0

                li
                    display inline-block
                    float none


        .heroImage
            display none

        .intro
            float none
            width 100%
            text-align center
            padding 0
            margin-bottom 25px

        .gallery--spotlight
            float none
            width 100%
            text-align center
            background $cream-lighter
            border 0
            padding 10px

            h3
                margin-bottom 10px



    +below(500px)
        .global-header
            padding-top 0
            padding-bottom 75px

        .global-nav
            position absolute
            top 0
            left 0
            right 0

        .website-title
            position relative
            top 60px

            h1
                font-size 34px
                margin-bottom 20px
