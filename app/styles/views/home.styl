//
// Home page styles
//---------------------------------------------------------

body.home

    .global-header
        padding 20px 0 190px
        margin-bottom 0

    .website-title
        position absolute
        top 85px
        width 100%
        padding 0

        h1
            font-size 5.5rem
            margin-bottom 10px

        h2
            display block

    .content-container
        padding-bottom 30px

    .center
        overflow hidden


    .hero
        background black url(../img/home/hero.jpg) no-repeat center center
        background-size auto 100%
        height 500px
        margin-bottom 30px

        article
            float right
            width 350px
            background rgba(255, 255, 255, .7)
            padding 25px
    p
        margin 0

    .intro
        float left
        width 40%
        padding-right 20px


    .gallery--spotlight
        float left
        width 60%
        padding-left 20px
        border-left 2px solid $mist

        h3
            margin-bottom 20px

        ul
            margin 0
            padding 0
            list-style none
            overflow hidden

        li
            float left
            width 22%
            margin-left 4%

            &:first-child
                margin-left 0

        img
            width 100%
            height 100%
