//
// Header styles
//---------------------------------------------------------

.global-header
    margin-bottom 30px

    .website-title
        text-align center
        padding 5px 0 7px

        h1
            margin 0

        h2
            display none
            margin -5px 0 0



    .global-nav
        text-align center
        background $cranberry-dark url(../img/global/bg_nav.png) repeat-x center center

        .nav-container
            display inline-block
            background $cranberry-dark
            padding 0 30px

        a:link,
        a:visited
            display block
            float left
            font-family $serifiqo
            font-size 1.4rem
            color white
            text-decoration none
            text-transform uppercase
            padding 13px 20px 8px

        a:hover
            color $cream
            transition color .2s ease

        a.active
            color $cream



    //+below(1260px)


    //+below(768px)


    +below(500px)
        .global-nav
            background $cranberry-dark
            
            .nav-container
                padding 0

            a:link,
            a:visited
                font-size 1.1rem
                padding 10px 15px 6px
                
                &:first-child
                    padding-left 0
                
                &:last-child
                    padding-right 0